{% extends 'base.html.twig' %}

{% block title %}Calendrier{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Calendrier des Événements Futurs</h1>
    <div class="row">
        {% for event in events %}
            <div class="col-md-6 mb-4">
                <div class="card bg-light h-100"> <!-- Utilisation de la classe bg-light de Bootstrap -->
                    <div class="card-body">
                        <h5 class="card-title">{{ event.title }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ event.date|date('d-m-Y H:i') }}</h6>
                        <p class="card-text">{{ event.description }}</p>
                        <p class="card-text"><small class="text-muted">Jeu: {{ event.jeu }}</small></p>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center" role="alert">
                    Aucun événement futur.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
