{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="login-container">
    <h1 class="center-text">Inscription</h1>

    {{ form_start(registrationForm, { 'attr': { 'class': 'center-form' } }) }}
        {{ form_row(registrationForm.username, {'attr': {'class': 'form-group'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-group'}}) }}
        {{ form_row(registrationForm.Password, {'attr': {'class': 'form-group'}}) }}
        <button type="submit">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
