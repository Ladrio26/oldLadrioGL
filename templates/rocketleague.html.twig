{% extends 'base.html.twig' %}

{% block title %}Rocket League{% endblock %}

{% block body %}
<div class="container calendar-container">
    <h1 class="calendar-title">Événements Rocket League</h1>
    <div class="calendar-events">
        {% for event in events %}
            <div class="calendar-event">
                <div class="event-card">
                    <div class="event-card-body">
                        <h5 class="event-card-title">{{ event.title }}</h5>
                        <h6 class="event-card-subtitle">{{ event.date|date('d-m-Y H:i') }}</h6>
                        <p class="event-card-text">{{ event.description }}</p>
                        <p class="event-card-text"><small>Jeu: {{ event.jeu }}</small></p>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="calendar-no-events">
                <div class="alert alert-info" role="alert">
                    Aucun événement futur pour Rocket League.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
