{% extends 'base.html.twig' %}

{% block body %}
    <div class="form-container">
        <h1>S'inscrire Seul</h1>
        {{ form_start(form) }}
            {% if form.name is defined %}
                {{ form_row(form.name) }}
            {% endif %}
            {% if form.email is defined %}
                {{ form_row(form.email) }}
            {% endif %}
            <button type="submit" class="btn btn-primary">S'inscrire Seul</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
